// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// primeira tabela
model Notification{
  id String @id
  recipientId  String
  content String
  category String
  readAt DateTime?
  createdAt DateTime @default(now())

  @@index([recipientId])
}